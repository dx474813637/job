body {
	--main-w: 1150px;
	--aside-nav-width: 230px;
	--aside-right-width: 350px;
	--theme-color: #0052d9;
	--page-bg: #f8f8f8;
	--theme-color-bg: color(#0052d9 tint(90%));
	--swiper-theme-color: var(--theme-color);
	--theme-color-d: color(#0052d9 shade(10%));
	--theme-color-l: color(#0052d9 tint(70%));
	--theme-color-l-30: color(#0052d9 tint(30%));
	--header-nav-h: 130px;
	color: #666;
	background: var(--page-bg);
	/* font-size: 14px; */
	/* padding-right: 40px!important; */
	@media (max-width: 768px) {
		--aside-nav-width: 100%;
		--main-w: 100%;
	}
}
.custom-control-label::before,
.custom-control-label::after {
	top: 0.1em;
}

.text-theme {
	color: var(--theme-color) !important;
}

.bg-theme {
	background-color: var(--theme-color) !important;
}

.modal-body {
	padding: 15px;
}

.no-scroll {
	height: 100%;
	overflow: hidden;
}

[class^="bi-"]::before,
[class*=" bi-"]::before {
	display: inline-block;
}

.btn-primary {
	background-color: var(--theme-color);
	border-color: var(--theme-color);
	color: #fff;
}

.btn-primary:hover {
	background-color: var(--theme-color-d);
	border-color: var(--theme-color-d);
}

.btn-light {
	background-color: var(--theme-color-bg);
	border-color: var(--theme-color-bg);
}

.modal-dialog {
	margin-bottom: 40px;
}

.main-container {
	width: var(--main-w);
	margin: 0 auto;
}

.swiper-container {
	& .swiper-pagination-bullet {
		width: 15px;
		height: 2px;
		border-radius: 2px;
		transition: all 0.3s;
	}

	& .swiper-pagination-bullet-active {
		width: 30px;
	}
}

.theme-color {
	background-color: var(--theme-color);
}

.theme-bg-color {
	background-color: var(--theme-color);
}

.logo {
	/* border-radius: 5px; */
}

.home-w {
	width: 1200px;
	margin: 0 auto;
	position: relative;

	@media (max-width: 1200px) {
		width: 100%;
		padding: 0;
	}
}

.d-line-1 {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.d-line-2,
.d-line-3,
.d-line-4,
.d-line-5 {
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	overflow: hidden;
	line-height: 1.5;
}

.d-line-2 {
	-webkit-line-clamp: 2;
}

.d-line-3 {
	-webkit-line-clamp: 3;
}

.d-line-4 {
	-webkit-line-clamp: 4;
}

.d-line-5 {
	-webkit-line-clamp: 5;
}

.dx-flex {
	display: flex;
	flex-direction: row;
	align-items: center;
}

.dx-col {
	flex-direction: column;
}

/* 换行 */
.dx-flex-wrap {
	flex-wrap: wrap;
}

.d-col-top {
	align-items: flex-start;
}

/* 垂直居中 */
.d-col-center {
	align-items: center;
}

/* 顶部对齐 */
.d-col-top {
	align-items: flex-start;
}

/* 底部对齐 */
.d-col-bottom {
	align-items: flex-end;
}

/* 底部对齐 */
.d-col-baseline {
	align-items: baseline;
}

/* 左边对齐 */
.d-row-left {
	justify-content: flex-start;
}

/* 水平居中 */
.d-row-center {
	justify-content: center;
}

/* 右边对齐 */
.d-row-right {
	justify-content: flex-end;
}

/* 水平两端对齐，项目之间的间隔都相等 */
.d-row-between {
	justify-content: space-between;
}

/* 水平每个项目两侧的间隔相等，所以项目之间的间隔比项目与父元素两边的间隔大一倍 */
.d-row-around {
	justify-content: space-around;
}

/* 不换行 */
.dx-flex-nowrap {
	flex-wrap: nowrap;
}

.dx-flex-1 {
	flex: 1;
}

.dx-flex-2 {
	flex: 2;
}

.dx-flex-3 {
	flex: 3;
}

.dx-flex-4 {
	flex: 4;
}

.dx-flex-5 {
	flex: 5;
}

.dx-flex-6 {
	flex: 6;
}

.dx-flex-7 {
	flex: 7;
}

.dx-flex-8 {
	flex: 8;
}

.dx-flex-9 {
	flex: 9;
}

.dx-flex-10 {
	flex: 10;
}

.dx-flex-11 {
	flex: 11;
}

.dx-flex-12 {
	flex: 12;
}

